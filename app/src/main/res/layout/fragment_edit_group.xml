<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gaurang.doctorover.EditGroup">
    <TextView
        android:id="@+id/editGroupGroupNameHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:text="Group Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editGroupGroupNameProgressBar"
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:layout_below="@+id/editGroupGroupNameHead" />

    <Spinner
        android:id="@+id/editGroupGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="3dp"
        android:paddingLeft="16dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/editGroupGroupNameHead"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editGroupMembersProgressBar"
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:layout_below="@+id/editGroupGroupName" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/editGroupListView"
        android:paddingLeft="16dp"
        android:layoutAnimation = "@anim/my_layout_animation"
        android:layout_below="@+id/editGroupGroupName"
        android:layout_alignLeft="@+id/editGroupGroupName"
        android:layout_alignStart="@+id/editGroupGroupName" />

</RelativeLayout>
