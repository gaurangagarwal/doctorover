<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >
    <TextView
        android:id="@+id/friendToGroupHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Members Already in Group"
        android:background="@color/lightPurple"/>
    <CheckBox
        android:id="@+id/friendToGroupCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friendToGroupHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:text="Gaurang Agarwal \ngaurangagarwal11@gamil.com" />
</RelativeLayout>