<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Styles for Add Friend Activity -->
    <style name="addFriendRelativeLayout" parent="Base.AlertDialog.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="addFriendFriendDetails" parent="Base.AlertDialog.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">Name: Gaurang asdkhba\nGender: Male\nEmail: g@g.com\nPhone:
            981231231
        </item>
    </style>

    <style name="addFriendFriendBtn" parent="Base.AlertDialog.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Add</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="addPatientInputHead" parent="Base.AlertDialog.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="addPatientLinearLayout" parent="Base.AlertDialog.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:inputType="textMultiLine"-->
    <!--android:ems="10"-->

    <style name="addPatientInput" parent="Base.AlertDialog.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="addObsvInputHead" parent="addPatientInputHead">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="addObsvInput" parent="Base.AlertDialog.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="addObsvLinearLayout" parent="addPatientLinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="obsvListHead" parent="Base.AlertDialog.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>

        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="obsvListVal" parent="obsvListHead">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#727272</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
</resources>
